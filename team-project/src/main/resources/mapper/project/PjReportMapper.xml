<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.oneao.project.mapper.PjReportMapper">

    <update id="recoveryReport">
        update pj_report
        set is_deleted = 0
        where id in
        <foreach collection="ids" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </update>

    <select id="selectRecycleList" resultType="cn.oneao.project.domain.PjReport">
        select *
        from pj_report
        where is_deleted = 1
        <if test="name != null and name != ''">
            and name like concat('%',#{name},'%')
        </if>

        order by update_time desc
    </select>
    <select id="selectRecycleCount" resultType="java.lang.Long">

    </select>

</mapper>